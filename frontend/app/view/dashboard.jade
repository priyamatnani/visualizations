                                nvd3(options="BC.options.dayRides", data="BC.chartData")
                            div(ng-if="BC.charts[3] == true")
                                nvd3(options="BC.options.dateRides" data="BC.chartData")








            md-tab(label='Recommendations', ng-click="BC.bikeRides()")
